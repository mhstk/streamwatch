{
  "manifest_version": 3,
  "name": "StreamWatch",
  "version": "1.0.0",
  "key": "",
  "description": "Transform video links into a Netflix-like streaming experience with watch history and series management",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "StreamWatch"
  },
  "options_page": "src/settings/settings.html",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage",
    "downloads",
    "contextMenus",
    "tabs",
    "activeTab",
    "identity",
    "scripting"
  ],
  "oauth2": {
    "client_id": "500362425893-9rs8ni119ri8bd5iq2v7pqmq7cas23lt.apps.googleusercontent.com",
    "scopes": [
      "openid",
      "email",
      "profile"
    ]
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": ["index.html", "src/popup/*", "src/settings/*", "assets/*", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
